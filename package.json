{
  "name": "nodeschool-web",
  "repository": {
    "type": "git",
    "url": ""
  },
  "version": "9.2.0",
  "description": "Nodeschool Bratislava - open for everyone",
  "dependencies": {
    "gmaps": "~0.4.24"
  },
  "devDependencies": {
    "dotenv": "~4.0.0",
    "eslint": "~3.19.0",
    "eslint-config-airbnb-base": "~11.1.3",
    "eslint-loader": "~1.7.1",
    "eslint-plugin-import": "~2.2.0",
    "eslint-plugin-prettier": "~2.0.1",
    "glob": "~7.1.1",
    "gulp": "~3.9.1",
    "gulp-hub": "~0.8.0",
    "light-scripts": "~2.2.2",
    "lint-staged": "~3.4.0",
    "lodash": "~4.17.4",
    "pre-commit": "~1.2.2",
    "prettier": "~1.2.2",
    "push-dir": "^0.4.1",
    "stylelint": "~7.10.1",
    "stylelint-config-sass-guidelines": "~2.1.0"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "scripts": {
    "build": "gulp build",
    "serve": "gulp serve",
    "lint-staged": "lint-staged",
    "deploy": "push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "app/scripts/**/*.js": "eslint",
    "app/styles/**/*.scss": "stylelint"
  },
  "browserslist": [
    "> 2%",
    "last 2 versions"
  ],
  "eslintConfig": {
    "extends": "airbnb-base",
    "plugins": [
      "prettier"
    ],
    "rules": {
      "arrow-parens": "off",
      "comma-dangle": "off",
      "no-trailing-spaces": [
        2,
        {
          "skipBlankLines": true
        }
      ],
      "no-param-reassign": 0,
      "no-underscore-dangle": 0,
      "no-plusplus": [
        "error",
        {
          "allowForLoopAfterthoughts": true
        }
      ],
      "prefer-spread": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": [
            "!gulp/**/*.js"
          ]
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "trailingComma": "all",
          "singleQuote": true
        }
      ]
    },
    "globals": {
      "$": true,
      "jQuery": true,
      "Modernizr": true,
      "window": true
    },
    "env": {
      "browser": true
    },
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    }
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "order/properties-alphabetical-order": null,
      "max-nesting-depth": [
        2,
        {
          "ignore": [
            "blockless-at-rules"
          ]
        }
      ],
      "selector-no-qualifying-type": [
        true,
        {
          "ignore": [
            "attribute",
            "class"
          ]
        }
      ],
      "selector-class-pattern": null,
      "scss/at-function-pattern": "^[_a-z]+([a-z0-9-]+[a-z0-9]+)?$",
      "scss/at-import-no-partial-leading-underscore": null,
      "color-named": [
        "never",
        {
          "ignore": [
            "inside-function"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "app/styles/vendors/**/*.scss"
    ]
  }
}
